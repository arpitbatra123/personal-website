      <div class="books">
        {% for review in reviews.data %}
        <div class="book">
          <img
            src="/assets/images/book-covers/{{ review.book.isbn }}.jpg"
            class="book-cover"
            width="224px"
            height="349px"
          />
          <div class="book-meta">
            <div class="book-title">
              {{ review.book.title }}
            </div>
            <p class="book-review">
              {{ review.review.body }}
            </p>
          </div>
