<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <link rel="alternate" href="/feed.xml" type="application/atom+xml" title="{{ siteMeta.author.name }}" />

    <!-- Primary Meta Tags -->
    <title>{{ siteMeta.author.name }}</title>
    <meta name="title" content="{{ siteMeta.author.name }}" />
    <meta name="description" content="{{ siteMeta.description }}" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ siteMeta.url }}/" />
    <meta property="og:title" content="{{ siteMeta.author.name }}" />
    <meta property="og:description" content="{{ siteMeta.description }}" />
    <meta property="og:image" content="{{ siteMeta.url }}/assets/images/profile.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="{{ siteMeta.url }}/" />
    <meta property="twitter:title" content="{{ siteMeta.author.name }}" />
    <meta property="twitter:description" content="{{ siteMeta.description }}" />
    <meta property="twitter:image" content="{{ siteMeta.url }}/assets/images/profile.png" />

    <link rel="stylesheet" href="./styles/common.css" />
    <link rel="stylesheet" href="./styles/homepage.css" />

    <!-- Google Analytics -->
    <script>
      window.ga =
        window.ga ||
        function () {
          (ga.q = ga.q || []).push(arguments);
        };
      ga.l = +new Date();
      ga('create', 'UA-148608259-1', 'auto');
      ga('send', 'pageview');
    </script>
    <script async src="https://www.google-analytics.com/analytics.js"></script>
    <!-- End Google Analytics -->
  </head>

  <body>
    <header>
      <h1 class="name">{{ siteMeta.author.name }}</h1>
      <nav>
        {% for item in siteMeta.navbarData %}
          <a href="{{item.url}}">{{item.text}}</a>
        {% endfor %}
      </nav>
    </header>
    <main class="container">
      <section class="about-me">
        {{ content }}
      </section>
        <h2 class="posts-heading">Posts</h2>
        <ul class="posts">
          {% for post in collections.posts reversed %}
          <li class="post">
            {% if post.data.meta.hindiTitle %}
            <span class="post-title hindi-font">
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </span>
            {% else %}
            <span class="post-title">
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </span>
            {% endif %}
            <div class="post-meta">
              <span class="post-date">
                {{ post.date | date: '%b %Y' | downcase }}
              </span>
              <span class="post-tags">
                {% for tag in post.data.tags %} {% if tag != "posts" %}
                <span class="post-tag">
                  <a href="/tags/{{ tag }}">#{{ tag }}</a>
                </span>
                {% endif %} {% endfor %}
              </span>
            </div>
          </li>
          {% endfor %}
        </ul>
      </div>
    </main>
  </body>
</html>
